.container
  = image_tag 'Rectangle.png'
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f|
    .field
      = f.label :email, class: 'form_ttl'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form_txt'
    .field
      = f.label :password, class: 'form_ttl'
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'form_txt'
    .actions
      = f.submit "Log in", class: 'btn_primary'
